<%= form_with url: items_path, method: :get, class: "form" do |f| %>
  <%= f.label :tag, "Search by tag:", class: "label" %>
  <%= f.text_field :tag, placeholder: 'furniture', class: "field"  %>
  <%= f.label :title, "Search by item:", class: "label" %>
  <%= f.text_field :title, placeholder: 'sofa', class: "field"  %>
  <%= f.submit "Search", class: "form-button" %>
<% end %>

<div class="top-menu">
  <h2><%= @items.count %> results</h2>
</div>

<%= render 'shared/cards' %>
