<html>
  <head>
    <meta charset="utf-8">
    <title><%= @item.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdeliver.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrGftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css">
  </head>

  <body>
    <div class="logged-in">
      <p>You are logged in as user: <%= @item.user.email %></p>
    </div>
    <br>
    <br>
    <div class="container pt-3">
    <%= link_to 'Back', items_path %>
      <div class="title">
        <h1><%= @item.title %></h1>
        <div class="">
          <% if @item.images.attached?%>
            <%= cl_image_tag(@item.images.first.key) %>
          <% else %>
            <%= image_tag unsplash_image_url(tags: 'surfboard'), class: "img" %>
          <% end %>
        </div>

      </div>
      <br>
      <span class="details">
        <p><%= @item.description %>

        <div class="text-muted mb-3">
          <p><%= @item.description %></p>
          <p> <%= @item.timeframe %></p>
          <p> Categories: <%= @item.tag_list %></p>
        </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.
      min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRm5q
      +8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
