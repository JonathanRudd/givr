<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="nav-header">
    <%= link_to image_tag("Givr.png"), root_path, class: "navbar-brand logo" %>
    <%= link_to "Givr", root_path, class: "nav-text" %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
        <%= image_tag "/assets/avatar.png", class: "dropdown-toggle", id: "navbarDropdown", data: { "bs-toggle": "dropdown" }, 'aria-expanded': false, style: "width: 40px; height: 40px; border-radius: 50%" %>
          <div class="dropdown-menu dropdown-menu-end nav-link" aria-labelledby="navbarDropdown">
            <% user_item_comments = [] %>
            <% current_user.items.each{|item| user_item_comments += item.comments} %>
            <% user_item_comments.map {|comment| comment.notification}.each do |notification| %>
              <li><%= link_to "notification", notification_path(notification_id: notification.id), class: "dropdown-item" %></li>
            <% end %>
          </div>
        </li>
        <li class="nav-item">
          <%= link_to "Items", items_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Give away", new_item_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.avatar.present? %>
            <%= image_tag current_user.avatar, class: "givr-avatar dropdown-toggle", id: "navbarDropdown", data: { "bs-toggle": "dropdown" }, 'aria-expanded': false, style: "width: 40px; height: 40px; border-radius: 50%" %>
            <% else %>
            <%= image_tag "/assets/avatar.png", class: "dropdown-toggle", id: "navbarDropdown", data: { "bs-toggle": "dropdown" }, 'aria-expanded': false, style: "width: 40px; height: 40px; border-radius: 50%" %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "Profile",edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Dashboard", dashboard_url, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        </li>
        <li class="nav-item">
          <%= link_to "Items", items_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
